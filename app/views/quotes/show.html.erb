<div class="container">
  <div class="quote-detail">
    <div class="quote-content">
      <h2>"<%= @quote.content %>"</h2>
    </div>
    <div class="quote-meta">
      <p><strong>Author:</strong> <%= @quote.author %></p>
      <p><strong>Category:</strong> <%= @quote.category %></p>
      <% if @quote.respond_to?(:ai_generated?) && @quote.ai_generated? %>
        <p class="ai-badge"><em>âœ¨ Generated by AI</em></p>
      <% end %>
    </div>
    <div class="actions">
      <% if @quote.respond_to?(:ai_generated?) && @quote.ai_generated? %>
        <!-- AI Generated Quote Actions -->
        <%= form_with url: quotes_path, method: :post, local: true, style: 'display: inline;' do |form| %>
          <%= form.hidden_field :content, value: @quote.content %>
          <%= form.hidden_field :author, value: @quote.author %>
          <%= form.hidden_field :category, value: @quote.category %>
          <%= form.submit 'Save This Quote', class: 'btn btn-primary' %>
        <% end %>
        <%= link_to 'Generate Another', random_path, class: 'btn btn-secondary' %>
      <% else %>
        <%= link_to 'Edit', edit_quote_path(@quote), class: 'btn btn-primary' %>
        <%= link_to 'Delete', @quote, method: :delete, 
                    confirm: 'Are you sure?', class: 'btn btn-danger' %>
      <% end %>
      <%= link_to 'Back to Quotes', quotes_path, class: 'btn btn-outline' %>
    </div>
  </div>
</div>